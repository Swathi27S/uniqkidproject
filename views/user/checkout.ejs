<%-include("../includes/user/homehead") %>

<style>
  body {
    font-family: "Times New Roman", Times, serif;
    margin: 0;
    padding: 0;
  }

  .custom-card {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    background-color: #f9f9f9;
  }
</style>

<div class="container">
  <div class="row mt-3">
    <!-- Left Side - Add Address -->
    <div class="col-md-6">
      <div class="card custom-card">
        <div class="card-body">
          <div class="card addresses">
            <div>
              <a
                href="/addaddress/<%= userData._id %>"
                class="btn btn-primary"
                style="background-color: #ae1313"
                >Add New Address</a
                
              >
              <h4 class="mt-3">Delivery to</h4>
            </div>

            
            <% address.forEach((item, index) =>{%>
            <div class="px-4 mt-4">
              <input class="form-check-input" type="radio"
              data-address-id="<%=item._id %>" name="address" id="flexRadio<%=
              index %>" <% if (index === 0) { %> checked <% } %> />
              <label for="flexRadio<%= index %>">
                <%= item.landmark %>,<%=item.street %>,<%=item.village %>,<%=
                item.city %>,<%= item.state %>,<%=item.country
                %>,<%=item.phonenumber %>,<%=item.zip %>
              </label>
              <!-- Edit and Delete Buttons -->
              <div>
                <!-- <button
                  type="button"
                  class="btn btn-primary edit-address"
                  data-address-id="<%= item._id %>"
                >
                  Edit
                </button> -->
                <!-- <button
                  type="button"
                  class="btn btn-danger delete-address"
                  data-address-id="<%= item._id %>"
                >
                  Delete
                </button> -->
              </div>
            </div>
            <% }) %>

            <div class="address-columns">
              <div class="address-option"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Side - Payment Options, Shipping Charge, Order Summary, Buttons -->
    <div class="col-md-6">
      <div class="card mt-3 custom-card">
        <div class="card-body">
          <h3 class="card-title">Shipping Charge</h3>
          <td>₹0.00</td>
        </div>
      </div>
      <div class="card mt-3 custom-card">
        <div class="card-body">
          <h3 class="card-title">Apply Coupon</h3>
          <div class="input-group mb-3">
            <input
              type="text"
              class="form-control"
              placeholder="Enter coupon code"
              aria-label="Enter coupon code"
              aria-describedby="apply-coupon-button"
            />
            <div class="input-group-append">
              <button
                class="btn btn-outline-secondary"
                type="button"
                id="apply-coupon-button"
              >
                Apply
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="card mt-3 custom-card">
        <div class="card-body">
          <h3 class="card-title">Order Summary</h3>
          <% products.forEach(product =>{ %>
          <div class="billing-item border-bottom">
            <p>
              <strong>Productname:</strong> <%= product.Product.productName %>
            </p>
            <p><strong>Price:</strong>₹ <%= product.Product.price %></p>
            <p><strong>Quantity</strong> <%= product.quantity %></p>
          </div>
          <% }) %>
          <p>Total: <strong><%= total %></strong></p>

          <table class="table"></table>
        </div>
      </div>

      <div class="card custom-card">
        <div class="card-body">
          <h3 class="card-title">Payment Options</h3>
          <label
            ><input
              type="radio"
              id="flexRadioDefault"
              checked
              name="payment"
              value="cod"
            />
            Cash on Delivery</label
          ><br />
          <label
            ><input type="radio" name="payment" value="razorpay" />
            Razorpay</label
          ><br />
        </div>
      </div>

      <div class="mt-3 text-right">
        <a href="/cart/<%= userData._id %>" class="btn btn-secondary" style="background-color: #ae1313">
            Back to cart
          </a>
          <a href="/place-order" class="btn btn-primary" style="background-color: #ae1313">
            Place Order
          </a>
          
      </div>
    </div>
  </div>
</div>
<%-include("../includes/user/homefooter") %>
